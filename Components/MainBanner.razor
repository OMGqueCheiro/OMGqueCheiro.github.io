@* Componente para o banner principal *@
<MudPaper Elevation="4" Class="d-flex flex-column align-items-center justify-center py-6" Style="background: linear-gradient(135deg, #7c3aed 0%, #a78bfa 100%); color: white;">
    <MudAvatar Size="Size.Large" Class="mb-3" Style="width:120px;height:120px;border:4px solid #a78bfa;background:white;" ImgSrc="@ImgSrc" />
    <MudText Typo="Typo.h3" Class="mb-1">@Title</MudText>
    <MudText Typo="Typo.h5" Class="mb-3">@Subtitle</MudText>
</MudPaper>

@code {
    [Parameter] public string ImgSrc { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string Subtitle { get; set; }
}
